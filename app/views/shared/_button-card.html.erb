<div class="container mt-3">
  <div class="container" style="text-align: center">
    <h1>Angel Services</h1>
  </div>
  <div  id="items">
    <div class="grid-container-2">
      <% @senior.buttons.each do |button|%>
        <div class="grid-item-group-2">
          <%= link_to new_user_provider_action_path(@senior, provider: button.provider), id: "#{button.provider.name.underscore}-button" do %>
            <li class="grid-item-2">
              <div class="container my-3">
                <div class="container">
                  <%= cl_image_tag (button.provider.photo.attached? ? button.provider.photo.key : "https://www.clker.com/cliparts/f/q/Q/u/f/t/push-button-glossy-red-hi.png" ), alt: "alttext" %>
                </div>
                <div class="container mt-3">
                  <h4> <%= button.name %> </h4>
                </div>
              </div>
            </li>
          <% end %>
        </div>
      <% end %>
      <div class="grid-item-group-2" >
        <%= render 'buttons/new' %>
        <li class="grid-item-2">
          <div class="container my-3">
            <div class="container" data-toggle="modal" data-target="#serviceModal">
              <%= cl_image_tag "https://www.clker.com/cliparts/f/q/Q/u/f/t/push-button-glossy-red-hi.png", alt: "alttext" %>
            </div>
            <div class="container mt-3">
              <h4> Add a Service </h4>
            </div>
          </div>
        </li>
      </div>
    </div>
  </div>
</div>